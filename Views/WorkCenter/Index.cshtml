@model IEnumerable<Agenda.Data.Workcenter>

@{
    ViewData["Title"] = "Index";
}

<div class="px-4 mt-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-base font-semibold leading-6 text-gray-900">Centro de Trabajo</h1>
    </div>
    <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
      <a asp-action="Create" asp-controller="WorkCenter" type="button" class="block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Añadir centro de trabajo</a>
    </div>
  </div>
  <div class="-mx-4 mt-8 sm:-mx-0">
    <table class="min-w-full divide-y divide-gray-300">
      <thead>
        <tr>
          <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0">@Html.DisplayNameFor(model => model.Name)</th>
          <th scope="col" class="hidden px-3 py-3.5 text-left text-sm font-semibold text-gray-900 lg:table-cell">@Html.DisplayNameFor(model => model.Address)</th>
          <th scope="col" class="hidden px-3 py-3.5 text-left text-sm font-semibold text-gray-900 sm:table-cell">@Html.DisplayNameFor(model => model.Grossrate)</th>
          <th scope="col" class="hidden px-3 py-3.5 text-left text-sm font-semibold text-gray-900 sm:table-cell">@Html.DisplayNameFor(model => model.Paymentday)</th>
          <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">@Html.DisplayNameFor(model => model.Netrate)</th>
          <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-0">
            <span class="sr-only">Editar</span>
          </th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200 bg-white">
        @foreach (var item in Model) {
        <tr>
          <td class="w-full max-w-0 py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:w-auto sm:max-w-none sm:pl-0">
            @Html.DisplayFor(modelItem => item.Name)
            <dl class="font-normal lg:hidden">
              <dd class="mt-1 truncate text-gray-700">@Html.DisplayFor(modelItem => item.Address)</dd>
              <dd class="mt-1 truncate text-gray-700">@Html.DisplayFor(modelItem => item.Grossrate)</dd>
              <dd class="mt-1 truncate text-gray-700">@Html.DisplayFor(modelItem => item.Paymentday)</dd>
              <dt class="sr-only sm:hidden">@Html.DisplayFor(modelItem => item.Netrate)</dt>
            </dl>
          </td>
          <td class="hidden px-3 py-4 text-sm text-gray-500 lg:table-cell">@Html.DisplayFor(modelItem => item.Address)</td>
          <td class="hidden px-3 py-4 text-sm text-gray-500 sm:table-cell">@Html.DisplayFor(modelItem => item.Grossrate)</td>
          <td class="hidden px-3 py-4 text-sm text-gray-500 sm:table-cell">@Html.DisplayFor(modelItem => item.Paymentday)</td>
          <td class="px-3 py-4 text-sm text-gray-500">@Html.DisplayFor(modelItem => item.Netrate)</td>
          <td class="py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-0">
            <a asp-action="Edit" asp-controller="WorkCenter" asp-route-id="@item.Centerid" class="text-amber-700 hover:text-amber-900">Editar</a> |
            <form asp-action="Delete" method="post" asp-route-id="@item.Centerid" onsubmit="return confirm('Are you sure you want to delete this WorkCenter')">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="text-red-700 hover:text-red-900">Eliminar</button> |
            </form>
            <a asp-action="Create" asp-controller="Schedule" asp-route-id="@item.Centerid" class="text-green-700 hover:text-green-900">Añadir horario</a>
          </td>
        </tr>
    }
      </tbody>
      @if (ViewData.ModelState.IsValid == false)
                {
                    <div class="mb-4 mt-2">
                        <p class="text-red-500 text-sm">@Html.ValidationSummary(false, "", new { @class = "text-sm text-red-500" })</p>
                    </div>
                }
    </table>
  </div>
</div>
